@model GameState

@{

    ViewData["Title"] = $"{ Model.gameName }";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:image" itemprop="image" content="@Model.gameThumbnailUrl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:site_name" content="@ViewData["Title"]">
    <meta property="og:description" content="@ViewData["description"]" />
    <meta property="og:updated_time" content="2020-02-05T23:10:58-06:00" />
    <title>@Model.gameName</title>

    </script><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @{
        foreach (var file in Model.scriptFiles)
        {
            <script defer="defer" src="@file"></script>
        }

        foreach (var file in Model.cssFiles)
        {
            <link rel="stylesheet" href="@file" />
        }
    }

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body id="main-body" class="mat-typography" style="background:#424242;overscroll-behavior-y:contain;">

    @{
        <input type="hidden" id="assets-root" value="@Model.assetsRoot" />
        <input type="hidden" id="ws-url" value="@Model.wsUrl" />
        <input type="hidden" id="ws-port" value="@Model.wsPort" />
        <input type="hidden" id="game-name" value="@Model.gameName" />
        <input type="hidden" id="game-primary-name" value="@Model.gamePrimaryName" />
        <input type="hidden" id="fill-screen" value="@Model.fillScreen" />
        <input type="hidden" id="screen-ratio" value="@Model.screenRatio" />
    }
    <div class="cavas-holder-inner" id="renderCanvas-holder">
        <canvas tabindex="0" autofocus width="2000" id="renderCanvas"></canvas>
    </div>

</body>
</html>

